<div class="tree-pagination flex-box">
  <div class="tree-pagination__count">
    <div class="tree-view-pagination__count__title">
      {{getPaginationInfo}}
    </div>
  </div>
  <div class="pagination dropdown-container">
    {{#paging}}
      <select class="pagination-dropdown"
              can-value="pageSize"
              {{#if disabled}}disabled{{/if}}>
      {{#pageSizeSelect}}
        <option value="{{.}}">{{.}}</option>
      {{/pageSizeSelect}}
      </select>
    {{/paging}}
  </div>
  <div class="tree-pagination__count per-page">
    <div class="tree-view-pagination__count__title">per page</div>
  </div>
  <div class="pagination">
    <div class="pagination-item {{#if_equals paging.current 1}} disabled{{/if_equals}}">
      <a can-click="setFirstPage">
        <i class="fa fa-angle-double-left" aria-hidden="true"></i>
      </a>
    </div>
    <div class="pagination-item {{#if_equals paging.current 1}} disabled{{/if_equals}}">
      <a can-click="setPrevPage">
        <i class="fa fa-angle-left" aria-hidden="true"></i>
      </a>
    </div>
    <div class="pagination-item">
      <input type="text" can-change="setCurrentPage" class="input"
               placeholder="{{getPaginationPlaceholder}}" >
    </div>
    <div class="pagination-item {{#if_equals paging.current paging.count}} disabled{{/if_equals}}">
      <a can-click="setNextPage">
        <i class="fa fa-angle-right" aria-hidden="true"></i>
      </a>
    </div>
    <div class="pagination-item {{#if_equals paging.current paging.count}} disabled{{/if_equals}}">
      <a can-click="setLastPage">
        <i class="fa fa-angle-double-right" aria-hidden="true"></i>
      </a>
    </div>
  </div>
</div>
