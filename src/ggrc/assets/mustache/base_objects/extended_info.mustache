{{#instance}}

  <div class="row-fluid">
    <div class="span12">
      {{#if_equals instance.class.table_singular 'person'}}
        <a class="main-title {{class.category}} oneline" href="{{viewLink}}">
          {{firstnonempty name email}}
        </a>
      {{else}}
        <a class="main-title {{class.category}} oneline" href="{{viewLink}}">
          {{title}}
        </a>
      {{/if_equals}}
    </div>
  </div>

  {{^if_equals instance.class.table_singular 'person'}}
    <div class="row-fluid">
      <div class="span12">
        <h6>Description</h6>
        <div class="rtf">
          {{{firstnonempty description '<span class="empty-message">None</span>'}}}
        </div>
      </div>
    </div>
  {{/if_equals}}

  {{#if_equals instance.class.table_singular 'person'}}
    <div class="row-fluid">
      <div class="span12">
        <h6>Email</h6>
        <p class="oneline">
          {{#using person=this}}
            {{>'/static/mustache/people/popover.mustache'}}
          {{/using}}
        </p>
      </div>
    </div>

    {{#if company.length}}
      <div class="row-fluid">
        <div class="span12">
          <h6>Company</h6>
          <p class="oneline">
            {{company}}
          </p>
        </div>
      </div>
    {{/if}}

  {{/if_equals}}

  {{^if_equals instance.class.table_singular 'person'}}
    {{>'/static/mustache/base_objects/contacts.mustache'}}
  {{/if_equals}}

  <div class="row-fluid">
    <div class="span5">
      {{#visibility_delay 500}}
      <div class="info">
        <i class="fa fa-control color"></i>
        {{#with_mapping_count instance 'controls' 'related_controls' 'controls'}}
          {{count}}
        {{else}}
          <span {{attach_spinner '{ "radius": 2.5, "length": 2.5, "width": 2 }' 'display:inline-block; top: -5px; left: 2px;' }}></span>
        {{/with_mapping_count}}
        &nbsp;&nbsp;
        <i class="fa fa-process color"></i>
        {{#with_mapping_count instance 'related_processes' 'related_processes' 'processes'}}
          {{count}}
        {{else}}
          <span {{attach_spinner '{ "radius": 2.5, "length": 2.5, "width": 2 }' 'display:inline-block; top: -5px; left: 2px;' }}></span>
        {{/with_mapping_count}}
        &nbsp;&nbsp;
        <i class="fa fa-system color"></i>
        {{#with_mapping_count instance 'related_systems' 'related_systems' 'systems'}}
          {{count}}
        {{else}}
          <span {{attach_spinner '{ "radius": 2.5, "length": 2.5, "width": 2 }' 'display:inline-block; top: -5px; left: 2px;' }}></span>
        {{/with_mapping_count}}
      </div>
      {{/visibility_delay}}
    </div>
  </div>
  {{^if_equals instance.class.table_singular 'person'}}
    <div class="row-fluid">
      <div class="span12">
        <div class="code">
          Code: {{slug}}
        </div>
      </div>
    </div>
  {{/if_equals}}
  <div class="links">
    <div class="row-fluid">
      <div class="span6">
        <a class="secondary" href="{{viewLink}}">
          View {{class.title_singular}}
        </a>
      </div>
    </div>
  </div>

{{/instance}}
